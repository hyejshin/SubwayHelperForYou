<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:left="@dimen/tab_space" android:right="@dimen/tab_space">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/BarButtonStartColor" android:endColor="@color/BarButtonEndColor" android:angle="90.0" android:centerY="0.5" android:centerColor="@color/BarButtonCenterColor" />
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="@color/BarButtonLineColor" />
        </shape>
    </item>
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <gradient android:startColor="#40000000" android:endColor="#40000000" android:angle="-90.0" />
        </shape>
    </item>
</layer-list>
