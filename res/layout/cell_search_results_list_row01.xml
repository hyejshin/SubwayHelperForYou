<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="58dp">
    <RelativeLayout android:id="@+id/timeLayout" android:paddingRight="5dp" android:layout_width="50dp" android:layout_height="22dp" android:layout_marginTop="10dp">
        <TextView android:textSize="16dp" android:textStyle="normal" android:textColor="#dd4444" android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" android:id="@+id/timeData1" android:layout_width="match_parent" android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout android:id="@+id/iconLayout" android:layout_width="20dp" android:layout_height="58dp" android:layout_toRightOf="@+id/timeLayout">
        <ImageView android:id="@+id/lineImage1" android:layout_width="8dp" android:layout_height="15dp" android:scaleType="fitXY" android:layout_centerHorizontal="true" android:contentDescription="@string/lineIcon" />
        <ImageView android:id="@+id/lineImage2" android:layout_width="8dp" android:layout_height="match_parent" android:layout_marginTop="15dp" android:scaleType="fitXY" android:layout_centerHorizontal="true" android:contentDescription="@string/lineIcon" />
        <ImageView android:id="@+id/lineIcon" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginTop="11dp" android:scaleType="fitCenter" android:layout_centerHorizontal="true" android:contentDescription="@string/lineIcon" />
    </RelativeLayout>
    <RelativeLayout android:paddingLeft="6dp" android:paddingTop="10dp" android:paddingRight="10dp" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="58dp" android:layout_toRightOf="@+id/iconLayout">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="22dp">
            <TextView android:textSize="15dp" android:textColor="#333333" android:id="@+id/timeData2" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="3dp" />
            <TextView android:textSize="16dp" android:textColor="#333333" android:id="@+id/stationName" android:layout_width="wrap_content" android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout android:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="22dp" android:layout_alignParentTop="true" android:layout_alignParentRight="true">
            <ImageView android:id="@+id/infoImage01" android:visibility="gone" android:layout_width="22dp" android:layout_height="20dp" android:src="@drawable/img_addon_info_icon1_1" android:scaleType="fitCenter" android:contentDescription="@string/imageIcon" />
            <ImageView android:id="@+id/infoImage02" android:visibility="gone" android:layout_width="22dp" android:layout_height="20dp" android:src="@drawable/img_addon_info_icon3_0" android:scaleType="fitCenter" android:contentDescription="@string/imageIcon" />
            <ImageView android:id="@+id/infoImage03" android:layout_width="22dp" android:layout_height="20dp" android:scaleType="fitCenter" android:contentDescription="@string/imageIcon" />
        </LinearLayout>
        <LinearLayout android:gravity="top|bottom|center_vertical|fill_vertical|center|fill" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="20dp" android:layout_marginLeft="3dp" android:layout_alignParentBottom="true">
            <ImageView android:id="@+id/lineIcon02" android:layout_width="25dp" android:layout_height="20dp" android:scaleType="fitCenter" android:contentDescription="@string/imageIcon" />
            <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="#777777" android:id="@+id/lineName02" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="3dp" android:layout_alignParentBottom="true" />
            <TextView android:textSize="15dp" android:textColor="#999999" android:id="@+id/destName" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="3dp" android:layout_alignParentBottom="true" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
