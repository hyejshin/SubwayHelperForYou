<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:background="@drawable/item_selector" android:layout_width="match_parent" android:layout_height="50dp">
    <TextView android:textSize="17dp" 
        android:textStyle="bold" 
        android:textColor="#888888" 
        android:gravity="top|bottom|center_vertical|fill_vertical|center|fill" 
        android:id="@+id/titleView" 
        android:layout_width="match_parent" 
        android:layout_height="50dp" android:layout_marginLeft="60dp" />
    <TextView android:textSize="17dp" 
        android:textColor="#ee5555" 
        android:gravity="right" 
        android:id="@+id/distanceView" 
        android:layout_width="match_parent" 
        android:layout_height="50dp" 
        android:layout_marginRight="40dp" android:layout_alignParentRight="true" />
    <ImageView android:id="@+id/lineIcon" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:scaleType="fitCenter" android:contentDescription="@string/lineIcon" />
    <ImageView android:layout_width="30dp" android:layout_height="30dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:src="@drawable/disclosure_indicator" android:scaleType="fitCenter" android:layout_alignRight="@+id/titleView" android:contentDescription="@string/DisclosureIndicator" />
</RelativeLayout>
